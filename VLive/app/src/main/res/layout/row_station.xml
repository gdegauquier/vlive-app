<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/ll_stations">

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:srcCompat="@drawable/logo_vlive"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:id="@+id/imgVlille"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        />

    <TextView
        android:text="Lille"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stationName"
        android:textSize="14sp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_alignTop="@+id/imgVlille"
        android:layout_toRightOf="@+id/imgVlille"
        android:layout_toEndOf="@+id/imgVlille"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:text="123, rue de la paix ..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stationAddress"
        android:textSize="10sp"
        android:layout_below="@+id/stationName"
        android:layout_alignLeft="@+id/stationName"
        android:layout_alignStart="@+id/stationName"
        android:textColor="@android:color/darker_gray" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:srcCompat="@drawable/bicycle"
        android:id="@+id/imgBike"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:layout_marginTop="12dp"
        />

    <TextView
        android:text="12"
        android:textSize="10sp"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/txtNbBikes"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="14dp"
        />


</RelativeLayout>